

# Exercise 4: Hashing

# 1
mkdir hash_checksum
cd hash_checksum

# 2
touch .sensible_addresses .sensible_passwords

# 3
ls -a

# 4
echo 'echo "Have a good day"' > gentle_script.sh

# 5
bash gentle_script.sh

# 6
sha256sum gentle_script.sh > log_sha

# 7
echo 'rm .sensible*' >> gentle_script.sh

# 8
sha256sum gentle_script.sh >> log_sha

# 9
bash gentle_script.sh

# 10
ls -a

# 11
cat log_sha

